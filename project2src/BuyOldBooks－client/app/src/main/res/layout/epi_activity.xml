<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.apple.buyoldbooksunit3.ui.epi.Epi_Activity"
    android:background="@drawable/picturebookdetail">

    <TableRow android:layout_height="40dp"
        android:layout_width="match_parent" android:id="@+id/tableRow0"
        android:layout_alignParentStart="true">

        <TextView android:id="@+id/epiNNTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nick Name:" android:textColor="#000"
            android:textSize="25dp"
            android:gravity="start"
            android:textStyle="bold" />
        <EditText android:layout_width="fill_parent"
            android:id="@+id/epiNNEditText"
            android:layout_height="wrap_content" android:layout_span="3"
            android:inputType="text" android:layout_weight="1"
            android:textSize="25dp"
            android:background="@drawable/bg_edittext1"
            android:gravity="center">
        </EditText>

    </TableRow>
    <TableRow android:layout_height="40dp"
        android:layout_width="match_parent" android:id="@+id/tableRow1"
        android:layout_below="@+id/tableRow0"
        android:layout_alignParentStart="true">
        <TextView android:id="@+id/epiGenderTextView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Gender:" android:textColor="#000"
            android:textSize="25dp"
            android:gravity="start"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tableRow1"
            android:gravity="end"
            android:orientation="horizontal"
            android:id="@+id/loginRadioGroupEpi">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="25dp"
                android:id="@+id/epiGenderMRadioButton"
                android:checked="false" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="25dp"
                android:id="@+id/epiGenderFRadioButton"
                android:checked="false" />
        </RadioGroup>
    </TableRow>
    <TableRow android:layout_height="40dp"
        android:layout_width="match_parent" android:id="@+id/tableRow2"
        android:layout_below="@+id/tableRow1"
        android:layout_alignParentStart="true">
        <TextView android:id="@+id/epiCPNTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cell Phone Number:" android:textColor="#000"
            android:textSize="25dp"
            android:gravity="end"
            android:textStyle="bold" />
        <EditText android:layout_width="100dp"
            android:id="@+id/epiCPNEditText"
            android:layout_height="wrap_content" android:layout_span="3"
            android:inputType="numberDecimal" android:layout_weight="1"
            android:background="@drawable/bg_edittext1"
            android:textSize="25dp"
            android:gravity="center">
        </EditText>
    </TableRow>
    <TableRow android:layout_height="40dp"
        android:layout_width="match_parent" android:id="@+id/tableRow3"
        android:layout_below="@+id/tableRow2"
        android:layout_alignParentStart="true">
        <TextView android:id="@+id/epiHATextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Address:" android:textColor="#000"
            android:textSize="25dp"
            android:gravity="end"
            android:textStyle="bold" />
        <EditText android:layout_width="100dp"
            android:id="@+id/epiHAEditText"
            android:layout_height="wrap_content" android:layout_span="3"
            android:inputType="text" android:layout_weight="1"
            android:background="@drawable/bg_edittext1"
            android:textSize="25dp"
            android:gravity="center">
        </EditText>
    </TableRow>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/epiCancelButton"
        android:textSize="20dp"
        android:background="@drawable/shape1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/done"
        android:textSize="20dp"
        android:id="@+id/epiDoneButton"
        android:background="@drawable/shape1"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
