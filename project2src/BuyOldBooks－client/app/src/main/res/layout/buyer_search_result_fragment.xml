<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apple.buyoldbooksunit3.ui.buyer_search.Buyer_Search_ResultFragment">




    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Available Book List"
        android:textSize="30dp"
        android:id="@+id/sortMethodRemindTextView"
        android:gravity="center"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/searchResultBackButton"
        android:layout_below="@+id/avlbookListView"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/shape1" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/avlbookListView"
        android:layout_below="@+id/sortMethodRemindTextView"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />


</RelativeLayout>