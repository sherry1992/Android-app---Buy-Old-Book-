<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apple.buyoldbooksunit3.ui.vol.Vol_MainFragment">



    <TableRow android:layout_height="50dp"
        android:layout_width="match_parent" android:id="@+id/tableRow1"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Your Order List"
            android:textColor="#000"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_below="@+id/tableRow1"
            android:layout_alignParentStart="true"
            android:textStyle="bold" />
    </TableRow>
    <ListView android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="250dp"
        android:id="@+id/volMyListView"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tableRow1">

    </ListView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textSize = "18dp"
        android:id="@+id/VOLBackButton"
        android:layout_marginLeft="30dp"
        android:background="@drawable/shape1"
        android:layout_below="@id/volMyListView"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true" />

    <TextView android:id="@+id/cartMainNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order No." android:textColor="#000"
        android:textSize="23dp"
        android:gravity="start"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tableRow1"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

</RelativeLayout>
