<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.apple.buyoldbooksunit3.ui.buyer_home.Buyer_HomeActivity"
    android:background="@drawable/pictured">

    <TableRow android:layout_height="70dp"
        android:layout_width="match_parent" android:id="@+id/tableRow0"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Edit Personnel Information"
            android:id="@+id/editbuyerbutton"
            android:layout_below="@+id/tableRow0"
            android:layout_alignParentStart="true"
            android:background="@drawable/shape"
            android:textColor="#ffff"
            android:textSize="20dp" />
    </TableRow>
    <TableRow android:layout_height="70dp"
        android:layout_width="match_parent" android:id="@+id/tableRow1"
        android:layout_below="@+id/tableRow0"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Search Books"
            android:id="@+id/searchbutton"
            android:layout_below="@+id/tableRow0"
            android:layout_alignParentStart="true"
            android:background="@drawable/shape"
            android:textColor="#ffff"
            android:textSize="20dp" />
    </TableRow>
    <TableRow android:layout_height="70dp"
        android:layout_width="match_parent" android:id="@+id/tableRow2"
        android:layout_below="@+id/tableRow1"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Check Notice"
            android:id="@+id/buyernoticebutton"
            android:layout_below="@+id/tableRow0"
            android:layout_alignParentStart="true"
            android:background="@drawable/shape"
            android:textColor="#ffff"
            android:textSize="20dp" />
    </TableRow>
    <TableRow android:layout_height="70dp"
        android:layout_width="match_parent" android:id="@+id/tableRow3"
        android:layout_below="@+id/tableRow2"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Order List"
            android:id="@+id/buyerorderbutton"
            android:layout_below="@+id/tableRow0"
            android:layout_alignParentStart="true"
            android:background="@drawable/shape"
            android:textColor="#ffff"
            android:textSize="20dp" />
    </TableRow>
    <TableRow android:layout_height="70dp"
        android:layout_width="match_parent" android:id="@+id/tableRow4"
        android:layout_below="@+id/tableRow3"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="View Cart"
            android:id="@+id/cartbutton"
            android:layout_below="@+id/tableRow0"
            android:layout_alignParentStart="true"
            android:background="@drawable/shape"
            android:textColor="#ffff"
            android:textSize="20dp" />
    </TableRow>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/buyerLogoutButton"
        android:layout_below="@+id/tableRow4"
        android:layout_alignParentEnd="true"
        android:background="@drawable/shape"
        android:textColor="#ffff"
        android:textSize="20dp" />
</RelativeLayout>
