<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.apple.buyoldbooksunit3.ui.Ui_LoginActivity"
    android:background="@drawable/pictured">

    <TableRow android:layout_height="40dp"
        android:layout_width="match_parent" android:id="@+id/tableRow0"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="E-mail:"
            android:textSize="25dp"
            android:id="@+id/emailTextView"
            android:textColor="#ffff"
            android:textStyle="bold|italic" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:textSize="25dp"
            android:id="@+id/emailEditText"
            android:background="@drawable/bg_edittext"
            android:layout_alignTop="@+id/emailTextView"
            android:layout_toEndOf="@+id/emailTextView"
            android:textColor="#ffff" />

    </TableRow>
    <TableRow android:layout_height="40dp"
        android:layout_width="match_parent" android:id="@+id/tableRow1"
        android:layout_below="@+id/tableRow0"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Passward:"
            android:textSize="25dp"
            android:id="@+id/passWordTextView"
            android:textColor="#ffff"
            android:textStyle="bold|italic"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:textSize="25dp"
            android:id="@+id/passWordEditText"
            android:textColor="#ffff" />

    </TableRow>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tableRow1"
        android:gravity="end"
        android:id="@+id/loginRadioGroup">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seller"
            android:id="@+id/sellerRadioButton"
            android:gravity="end"
            android:checked="false"
            android:textSize="23dp"
            android:layout_below="@+id/tableRow1"
            android:layout_toEndOf="@+id/loginBackButton"
            android:textColor="#ffff"
            android:paddingTop="6dp"
            android:singleLine="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buyer"
            android:id="@+id/buyerRadioButton"
            android:gravity="end"
            android:checked="false"
            android:textSize="23dp"
            android:paddingTop="6dp"
            android:layout_below="@+id/sellerRadioButton"
            android:layout_toEndOf="@+id/loginBackButton"
            android:textColor="#ffff" />

    </RadioGroup>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/loginBackButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape"
        android:textSize="18dp"
        android:textColor="#ffff"
        android:layout_alignTop="@+id/loginLoginButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginLoginButton"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape"
        android:textColor="#ffff"
        android:layout_below="@+id/loginRadioGroup"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="31dp" />



</RelativeLayout>
