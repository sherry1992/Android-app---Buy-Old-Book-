<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apple.buyoldbooksunit3.ui.seller_mbl.Seller_Mbl_MainFragment">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Your Book List"
        android:id="@+id/YourBookListTextView"
        android:textSize="30dp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <ListView android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/YourBookListTextView"
        android:layout_height="250dp"
        android:id="@+id/MyListView">

    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/sellMblBackButton"
        android:layout_below="@+id/MyListView"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/shape1"
        android:textSize="20dp" />


</RelativeLayout>
