<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.apple.buyoldbooksunit3.ui.Ui_RegisterActivity"
    android:background="@drawable/pictured">

    <TableRow android:layout_height="50dp"
        android:layout_width="match_parent" android:id="@+id/tableRow0"
        android:layout_alignParentStart="true">
        <TextView android:id="@+id/registerEmailTextView"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="E-mail:"
            android:textColor="#fff"
            android:paddingEnd="8dp"
            android:textSize="30dp"
            android:gravity="end">
        </TextView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:textSize="30dp"
            android:background="@drawable/bg_edittext"
            android:id="@+id/registerEmailEditView"
            android:layout_weight="1"
            android:textColor="#ffff"
            android:hint="eg:a@gmail.com"
            android:textColorHint="#85ffffff" />
    </TableRow>
    <TableRow android:layout_height="50dp"
        android:layout_width="match_parent" android:id="@+id/tableRow1"
        android:layout_below="@+id/tableRow0"
        android:layout_alignParentStart="true">
        <TextView android:id="@+id/registerPassTextView"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:text="Password:"
            android:textColor="#fff"
            android:textSize="30dp"
            android:gravity="end">
        </TextView>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:textSize="30dp"
            android:textColor="#fff"
            android:id="@+id/registerPassEditText"
            android:background="@drawable/bg_edittext"
            android:textColorHint="#85ffffff"
            android:layout_weight="1"
            android:textIsSelectable="true"
            android:hint="eg:123456" />

    </TableRow>
    <TableRow android:layout_height="50dp"
        android:layout_width="match_parent" android:id="@+id/tableRow2"
        android:layout_below="@+id/tableRow1"
        android:layout_alignParentStart="true">
        <TextView android:id="@+id/registerCPassTextView"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Confirm Password:"
            android:paddingEnd="8dp"
            android:textColor="#fff"
            android:textSize="30dp"
            android:gravity="end">
        </TextView>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@drawable/bg_edittext"
            android:textColor="#fff"
            android:textColorHint="#85ffffff"
            android:ems="10"
            android:textSize="30dp"
            android:id="@+id/registerCPassEditText"
            android:layout_weight="1"
            android:hint="eg:123456" />

    </TableRow>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/reRegisterButton"
        android:background="@drawable/shape"
        android:textColor="#ffff"
        android:layout_alignTop="@+id/reBackButton"
        android:layout_alignEnd="@+id/tableRow2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/reBackButton"
        android:background="@drawable/shape"
        android:textColor="#ffff"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/tableRow2"
        android:layout_alignParentStart="true" />



</RelativeLayout>
