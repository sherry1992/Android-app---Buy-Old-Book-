<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.apple.buyoldbooksunit3.ui.seller_unb.Seller_Unb_Activity"
    android:background="@drawable/picturebookdetail">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/sellerUNBImageView"
        android:src="#70000000"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="25dp"
        android:text="Name:"
        android:id="@+id/SellerUNBNameTextView"
        android:layout_toEndOf="@+id/sellerUNBImageView"
        android:textColor="#000"
        android:gravity="start"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/SellerUNBNameEditText" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="25dp"
        android:text="Price:"
        android:id="@+id/SellerUNBPriceTextView3"
        android:textColor="#000"
        android:layout_marginLeft="10dp"

        android:gravity="start"
        android:layout_above="@+id/tableRow4"
        android:layout_toEndOf="@+id/sellerUNBImageView" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/SellerUNBNameEditText"
        android:layout_above="@+id/SellerUNBPriceTextView3"
        android:layout_toEndOf="@+id/SellerUNBNameTextView"
        android:background="@drawable/bg_edittext1"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SellerUNBPriceEditText"
        android:textSize="25dp"
        android:layout_toEndOf="@+id/SellerUNBNameTextView"
        android:background="@drawable/bg_edittext1"
        android:layout_below="@+id/SellerUNBNameEditText" />
    <TableRow android:layout_height="40dp"
        android:layout_width="match_parent" android:id="@+id/tableRow4"
        android:layout_marginTop="30dp"

        android:layout_below="@+id/sellerUNBImageView"
        android:layout_alignParentEnd="true">
        <TextView android:id="@+id/SellerUBCTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Book Cover:" android:textColor="#000"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:gravity="start"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/sellerUNBcameraButton"
            android:layout_below="@+id/tableRow5"
            android:layout_alignParentStart="true"
            android:background="@drawable/shape1"
            android:text="Camera" />

    </TableRow>
    <TableRow android:layout_height="30dp"

        android:layout_width="match_parent" android:id="@+id/tableRow5"
        android:layout_below="@+id/tableRow4"
        android:layout_alignParentEnd="true">
        <TextView android:id="@+id/SellerUNBDegreeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Degrees of Depreciation:" android:textColor="#000"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:gravity="start"/>
    </TableRow>


    <TableRow android:layout_height="50dp"
        android:layout_width="match_parent" android:id="@+id/tableRow6"
        android:layout_below="@+id/tableRow5"
        android:layout_alignParentEnd="true">
        <RadioGroup
            android:id="@+id/sellerUNBgroup" android:layout_width="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90%new"
                android:id="@+id/radioButton90per"
                android:textSize="25dp"
                android:checked="false"
                android:layout_gravity="left" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70%new"
                android:textSize="25dp"
                android:id="@+id/radioButton70per"
                android:checked="false"
                android:layout_gravity="center_horizontal" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%new"
                android:textSize="25dp"

                android:id="@+id/radioButton50per"
                android:checked="false" />
        </RadioGroup>
    </TableRow>



    <TableRow android:layout_height="50dp"
        android:layout_width="match_parent" android:id="@+id/tableRow8"
        android:layout_below="@+id/tableRow6"
        android:layout_alignParentStart="true">
        <TextView android:id="@+id/SellerUNBDescribeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:" android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"
            android:gravity="start"/>
        <TextView android:id="@+id/PaddingTextView4"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:gravity="end"/>

    </TableRow>
    <TableRow android:layout_height="40dp"
        android:layout_width="match_parent" android:id="@+id/tableRow9"
        android:layout_below="@+id/tableRow8"
        android:layout_alignParentEnd="true">
        <EditText android:layout_width="100dp"
            android:id="@+id/SellerUNBDescribeEditText"
            android:layout_height="wrap_content" android:layout_span="3"
            android:inputType="text" android:layout_weight="1"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_edittext1"
            android:gravity="center">
        </EditText>
    </TableRow>
    <TableRow android:layout_height="40dp"
        android:layout_width="match_parent" android:id="@+id/tableRow10"
        android:layout_below="@+id/tableRow9"
        android:layout_alignParentEnd="true">
        <TextView android:id="@+id/SellerUNBPayMethodTextView"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Payment Method:" android:textColor="#000"
            android:textSize="25dp"
            android:gravity="end"/>
        <EditText android:layout_width="fill_parent"
            android:id="@+id/SellerUNBPayMethodEditText"
            android:background="@drawable/bg_edittext1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" android:layout_span="3"
            android:inputType="text" android:layout_weight="1"
            android:textSize="25dp"
            android:gravity="center">
        </EditText>
    </TableRow>
    <TableRow android:layout_height="40dp"
        android:layout_width="match_parent" android:id="@+id/tableRow11"
        android:layout_below="@+id/tableRow10"
        android:layout_alignParentEnd="true">
        <TextView android:id="@+id/SellerUNBExpMethodTextView"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Express Method:" android:textColor="#000"
            android:textSize="25dp"
            android:gravity="end"/>
        <EditText android:layout_width="fill_parent"
            android:id="@+id/SellerUNBExpMethodEditText"
            android:background="@drawable/bg_edittext1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" android:layout_span="3"
            android:inputType="text" android:layout_weight="1"
            android:textSize="25dp"
            android:gravity="center">
        </EditText>
    </TableRow>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/SellerUNBCancelButton"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape1"
        android:layout_alignTop="@+id/SellerUNBDoneButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/done"
        android:id="@+id/SellerUNBDoneButton"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape1"
        android:layout_below="@+id/tableRow11"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>
