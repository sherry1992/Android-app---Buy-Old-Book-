<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apple.buyoldbooksunit3.ui.seller_mbl.Seller_Mbl_BookDetailsFragment"
    android:background="@drawable/picturebookdetail">

    <TableRow android:layout_height="150dp"
        android:layout_width="match_parent" android:id="@+id/tableRow0"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:weightSum="1">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/SellerMBLBookDImageView"
            android:layout_alignParentStart="true"
            android:src="#70000000" />
        <TextView android:id="@+id/SellerMBLBookDNameTextView"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="30dp"
            android:gravity="center"/>

    </TableRow>
    <TableRow android:layout_height="50dp"
        android:layout_width="match_parent" android:id="@+id/tableRow1"
        android:layout_below="@+id/tableRow0"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true">
        <TextView android:id="@+id/SellerMBLBookDDescribTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Description:" android:textColor="#000"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="start"
            android:textStyle="bold" />

    </TableRow>
    <TableRow android:layout_height="wrap_content"
        android:layout_width="match_parent" android:id="@+id/tableRow2"
        android:layout_below="@+id/tableRow1"
        android:layout_alignParentStart="true">
        <TextView android:id="@+id/SellerMBLBookDDesContentTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#000"
            android:textSize="25dp"
            android:gravity="start"
            android:textStyle="italic" />

    </TableRow>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:layout_marginLeft="10dp"
        android:id="@+id/SellerMBLBookDBackButton"
        android:background="@drawable/shape1"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/SellerMBLBookDUpdateInfoButton" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Info"
        android:textSize="20dp"
        android:id="@+id/SellerMBLBookDUpdateInfoButton"
        android:background="@drawable/shape1"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tableRow2"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/SellerMBLBookDDeleteButton"
        android:background="@drawable/shape1"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/SellerMBLBookDUpdateInfoButton"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
